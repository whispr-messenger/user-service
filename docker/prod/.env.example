####################################################################################################
## Node.js Environment
####################################################################################################
NODE_ENV=production

####################################################################################################
## Postgres
####################################################################################################
POSTGRES_USER=prod_user
POSTGRES_PASSWORD=CHANGE_ME
POSTGRES_PORT=5432
POSTGRES_DB=production
POSTGRES_INITDB_ARGS="--encoding=UTF-8"

####################################################################################################
## Database Configuration (NestJS)
####################################################################################################
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=prod_user
DB_PASSWORD=CHANGE_ME
DB_NAME=production
DB_URL="postgresql://prod_user:CHANGE_ME@postgres:5432/production"
DB_TYPE=postgres
DB_MIGRATIONS_RUN=true
DB_SYNCHRONIZE=false
DB_LOGGING=false

####################################################################################################
## Redis Configuration
####################################################################################################
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME

####################################################################################################
## Service Ports
####################################################################################################
HTTP_PORT=3001
GRPC_PORT=50051

####################################################################################################
## JWT Configuration
## IMPORTANT: Generate proper ECDSA keys for production
## Example: openssl ecparam -genkey -name prime256v1 -noout -out private-key.pem
##          openssl ec -in private-key.pem -pubout -out public-key.pem
####################################################################################################
JWT_PRIVATE_KEY=CHANGE_ME_ECDSA_PRIVATE_KEY
JWT_PUBLIC_KEY=CHANGE_ME_ECDSA_PUBLIC_KEY
JWT_ACCESS_SECRET=CHANGE_ME
JWT_REFRESH_SECRET=CHANGE_ME
JWT_VERIFICATION_SECRET=CHANGE_ME

####################################################################################################
## Twilio SMS Configuration
## Get credentials from: https://console.twilio.com/
####################################################################################################
TWILIO_ACCOUNT_SID=CHANGE_ME
TWILIO_AUTH_TOKEN=CHANGE_ME
TWILIO_FROM_NUMBER=+1234567890

####################################################################################################
## gRPC Services
####################################################################################################
USER_SERVICE_GRPC_URL=user-service:50052
MEDIA_SERVICE_GRPC_URL=media-service:50053

####################################################################################################
## Optional Configuration
####################################################################################################
NODE_OPTIONS="--max-old-space-size=512 --enable-source-maps"
LOG_LEVEL=info
METRICS_ENABLED=true
HEALTH_CHECK_TIMEOUT=5000
ENABLE_CORS=false
ENABLE_SWAGGER=false
HOT_RELOAD=false
