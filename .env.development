# Application
PORT=3000
NODE_ENV=development

# Database
DATABASE_HOST=postgres-dev
DATABASE_PORT=5432
DATABASE_USERNAME=whisper_user
DATABASE_PASSWORD=whisper_password
DATABASE_NAME=whisper_users_dev
DATABASE_SYNCHRONIZE=true
DATABASE_LOGGING=true
DATABASE_SSL=false

# Redis
REDIS_HOST=redis-dev
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0

# JWT
JWT_SECRET=dev-jwt-secret
JWT_EXPIRES_IN=24h

# gRPC Services
AUTH_SERVICE_URL=localhost:50051
MESSAGING_SERVICE_URL=localhost:50052
MEDIA_SERVICE_URL=localhost:50053
NOTIFICATION_SERVICE_URL=localhost:50054
MODERATION_SERVICE_URL=localhost:50055

# CORS
CORS_ORIGIN=*
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100
